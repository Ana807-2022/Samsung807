<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#000000"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:text="0"
        android:textColor="#FF0000"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#ABEF9F"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="AC"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewDevide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="/"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewPlMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="+/-"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewPer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="%"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#ABEF9F"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="7"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="8"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="9"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewMul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="X"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="4"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="6"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="-"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#ABEF9F"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="2"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="3"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewPl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="+"
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#ABEF9F"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.34"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewPo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="."
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewEq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#000000"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="="
            android:textColor="#FF1400"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>